<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.example.daquexian.flexiblerichtextview.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daquexian.flexiblerichtextview.FlexibleRichTextView
                android:id="@+id/frtv_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                app:maxLine="3"
                app:textSize="20sp" />

            <com.daquexian.flexiblerichtextview.FlexibleRichTextView
                android:id="@+id/frtv_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                app:maxLine="5"
                app:textSize="20sp" />

            <com.daquexian.flexiblerichtextview.FlexibleRichTextView
                android:id="@+id/frtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                app:textSize="20sp" />

            <com.daquexian.flexiblerichtextview.FlexibleRichTextView
                android:id="@+id/frtv_only_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#fff"
                app:frtv_pureText="true"
                app:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
